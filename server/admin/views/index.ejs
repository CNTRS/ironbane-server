<!doctype html>
<html>
    <head>
        <title>Ironbane Server Admin</title>

        <script src="/socket.io/socket.io.js"></script>

        <script src="/vendor/underscore-min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular.min.js"></script>

        <script src="/js/app.js"></script>
        <script src="/js/status-ctrl.js"></script>
        <script src="/js/socket.js"></script>

    </head>
    <body>
        <div id="main">
            <div ng-controller="StatusController">
                <table>
                    <thead>
                        <tr>
                            <th>Zone</th>
                            <th>Entities</th>
                            <th>Sockets</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="zone in zones">
                            <td>{{ zone }}</td>
                            <td>{{ status[zone].entities }}</td>
                            <td>{{ status[zone].sockets.length }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <script>
            angular
                .module('IronbaneAdminApp')
                .constant('ZONES', <%-JSON.stringify(zones) %> );

            angular.element(document).ready(function () {
                angular.bootstrap(document, ['IronbaneAdminApp']);
            });
        </script>
    </body>
</html>
